---
export interface Props {
  title: string;
  description?: string;
  image: string;
  imageAlt?: string;
  category?: string;
  date?: string;
  href?: string;
  animate?: boolean;
  animateDelay?: number;
}

const {
  title,
  description,
  image,
  imageAlt = "",
  category,
  date,
  href = "#",
  animate = false,
  animateDelay = 0,
} = Astro.props;

const animationClass = animate
  ? `scroll-animate animate-stagger-${animateDelay}`
  : "";
---

<a
  href={href}
  class={`news-card group relative block overflow-hidden bg-black-700 border border-yellow/10 transition-all hover:scale-[1.02] hover:shadow-[0_20px_40px_rgba(255,214,2,0.3)] hover:border-yellow ${animationClass}`}
>
  <!-- Full height image container -->
  <div class="relative h-[400px] w-full">
    <!-- Image -->
    <img
      src={image}
      alt={imageAlt || title}
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />

    <!-- Gradient overlay that fades from transparent top to dark bottom -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-transparent via-black/40 to-black"
    >
    </div>

    <!-- Text content overlay positioned at bottom -->
    <div class="absolute right-0 bottom-0 left-0 p-6">
      <!-- Category and date row -->
      <div class="mb-3 flex items-center justify-between">
        {
          category && (
            <span class="font-body text-yellow text-xs font-medium tracking-wider uppercase">
              {category}
            </span>
          )
        }
        {date && <time class="font-body text-xs text-white/70">{date}</time>}
      </div>

      <!-- Title -->
      <h3
        class="font-display group-hover:text-yellow mb-2 line-clamp-2 text-2xl leading-tight font-bold text-white transition-colors"
      >
        {title}
      </h3>

      <!-- Description (optional, shown only if provided) -->
      {
        description && (
          <p class="font-body line-clamp-2 text-sm text-white/80">
            {description}
          </p>
        )
      }
    </div>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
