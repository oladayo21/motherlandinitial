---
export interface Props {
  variant?: "default" | "bordered" | "elevated" | "dark" | "article" | "product";
  hover?: boolean;
  lift?: boolean;
  className?: string;
  animate?: boolean;
  animateDelay?: number;
}

const {
  variant = "default",
  hover = true,
  lift = false,
  className = "",
  animate = false,
  animateDelay = 0,
} = Astro.props;

const variantClasses = {
  default: "bg-white",
  bordered: "border-black-200 border bg-white",
  elevated: "bg-white shadow-lg",
  dark: "bg-black-700 text-white",
  article: "bg-black-900 border border-white/10",
  product: "bg-black border border-white/10",
};

const hoverClasses = {
  default: "hover:shadow-lg",
  bordered: "hover:border-yellow hover:shadow-lg",
  elevated: "hover:shadow-2xl",
  dark: "hover:bg-black-600 hover:shadow-xl",
  article: "hover:shadow-2xl hover:border-white/20",
  product: "hover:shadow-2xl",
};

const variantClass = variantClasses[variant];
const hoverClass = hover ? hoverClasses[variant] : "";
const liftClass = lift ? "hover:-translate-y-1" : "";
const animateClass = animate ? "scroll-animate" : "";
const animateDelayClass =
  animate && animateDelay > 0 ? `animate-stagger-${animateDelay}` : "";
---

<article
  class:list={[
    "group transition-all duration-300",
    variantClass,
    hoverClass,
    liftClass,
    animateClass,
    animateDelayClass,
    className,
  ]}
>
  <slot />
</article>
