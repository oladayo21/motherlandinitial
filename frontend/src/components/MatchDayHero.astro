---
export interface Props {
  match: {
    homeTeam: string;
    awayTeam: string;
    kickoffTime: string;
    venue: string;
    competition: string;
    isLive?: boolean;
    liveStreamUrl?: string;
    heroImage?: string; // Custom match graphic
  };
}

const { match } = Astro.props;

// Calculate time until kickoff
const kickoffTime = new Date(match.kickoffTime);
const now = new Date();
const timeUntilKickoff = kickoffTime.getTime() - now.getTime();
const hoursUntilKickoff = Math.floor(timeUntilKickoff / (1000 * 60 * 60));
const minutesUntilKickoff = Math.floor((timeUntilKickoff % (1000 * 60 * 60)) / (1000 * 60));

// Default hero image if custom one not provided
const heroImage = match.heroImage || "https://images.unsplash.com/photo-1508098682722-e99c43a406b2?q=80&w=2070";
---

<section class="relative min-h-screen w-full overflow-hidden bg-black">
  <!-- Match Day Graphic Background -->
  <div class="absolute inset-0 z-0">
    <!-- Main Hero Image (will contain match graphics) -->
    <div class="absolute inset-0">
      <img
        src={heroImage}
        alt={`${match.homeTeam} vs ${match.awayTeam} match day graphic`}
        class="h-full w-full object-cover"
        loading="eager"
      />
    </div>
    
    <!-- Subtle Gradient Overlays for text readability -->
    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-transparent to-black/90"></div>
  </div>

  <!-- Match Day Content -->
  <div class="relative z-10 flex min-h-screen flex-col justify-end pb-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 w-full">
      <div class="space-y-8">
        <!-- Live/Match Day Badge -->
        <div class="flex items-center gap-6">
          {match.isLive ? (
            <div class="inline-flex items-center gap-3 bg-black/60 backdrop-blur-md border border-red-500/50 px-6 py-3">
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-500 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
              </span>
              <span class="font-display text-red-500 font-black uppercase tracking-widest">LIVE NOW</span>
            </div>
          ) : (
            <div class="inline-flex items-center gap-3 bg-black/60 backdrop-blur-md border border-yellow/50 px-6 py-3">
              <span class="h-2 w-2 bg-yellow animate-pulse"></span>
              <span class="font-display text-yellow font-bold uppercase tracking-widest">MATCH DAY</span>
            </div>
          )}
          
          {!match.isLive && timeUntilKickoff > 0 && (
            <div class="inline-flex items-center gap-2 bg-black/60 backdrop-blur-md px-6 py-3">
              <svg class="w-5 h-5 text-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-display text-white font-bold">
                KICKOFF IN <span class="text-yellow tabular-nums">{hoursUntilKickoff.toString().padStart(2, '0')}:{minutesUntilKickoff.toString().padStart(2, '0')}</span>
              </span>
            </div>
          )}
        </div>

        <!-- Match Info Bar -->
        <div class="bg-black/60 backdrop-blur-md border border-white/10 px-8 py-4 max-w-3xl">
          <div class="flex flex-wrap items-center gap-6 text-white/90">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <span class="font-body text-lg">{match.venue}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
              <span class="font-body text-lg">{match.competition}</span>
            </div>
          </div>
        </div>

        <!-- CTAs -->
        <div class="flex flex-wrap gap-4">
          <a
            href="/match-center"
            class="group relative overflow-hidden bg-gradient-to-r from-yellow to-gold px-10 py-5 text-black shadow-2xl shadow-yellow/20 hover:shadow-yellow/40 transition-all"
          >
            <span class="relative z-10 font-display text-lg font-black uppercase tracking-wide flex items-center gap-3">
              {match.isLive ? (
                <>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"></path>
                  </svg>
                  Watch Live
                </>
              ) : (
                <>Enter Match Center</>
              )}
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-gold to-yellow opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
          
          {match.liveStreamUrl && !match.isLive && (
            <a
              href="/match-center"
              class="group relative overflow-hidden bg-red-600 px-10 py-5 text-white shadow-xl hover:bg-red-700 transition-all"
            >
              <span class="relative z-10 font-display text-lg font-bold uppercase tracking-wide flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                Live Stream Available
              </span>
            </a>
          )}
          
          <a
            href="/tickets"
            class="group relative overflow-hidden border-2 border-yellow bg-black/60 backdrop-blur-sm px-10 py-5 text-yellow hover:bg-yellow hover:text-black transition-all"
          >
            <span class="relative z-10 font-display text-lg font-bold uppercase tracking-wide flex items-center gap-3">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
              </svg>
              Get Tickets
            </span>
          </a>
          
          <a
            href="/news"
            class="group relative overflow-hidden border-2 border-white/30 bg-black/60 backdrop-blur-sm px-10 py-5 text-white hover:border-white/60 transition-all"
          >
            <span class="relative z-10 font-display text-lg font-bold uppercase tracking-wide">
              Latest News
            </span>
          </a>
        </div>

        <!-- Optional: Live Score Display (only if match is live) -->
        {match.isLive && (
          <div class="bg-black/80 backdrop-blur-xl border border-yellow/30 px-8 py-6 max-w-md">
            <div class="flex items-center justify-between">
              <div>
                <p class="font-display text-3xl font-black text-white">{match.homeTeam}</p>
                <p class="font-display text-5xl font-black text-yellow mt-2">2</p>
              </div>
              <div class="font-display text-3xl font-bold text-white/30 mx-6">-</div>
              <div class="text-right">
                <p class="font-display text-3xl font-black text-white">{match.awayTeam}</p>
                <p class="font-display text-5xl font-black text-white mt-2">1</p>
              </div>
            </div>
            <div class="mt-4 pt-4 border-t border-yellow/20 text-center">
              <p class="font-body text-yellow text-sm">67' - Second Half</p>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</section>