<script>
  // Gallery scroll functionality for variable-width items
  function initGalleryScroll() {
    const track = document.querySelector(".gallery-track");
    const prevBtn = document.querySelector(".gallery-prev");
    const nextBtn = document.querySelector(".gallery-next");

    if (track && prevBtn && nextBtn) {
      let currentTranslate = 0;
      const gap = 24; // Gap between items (gap-6 = 1.5rem = 24px)

      function getItemWidths() {
        const items = track.querySelectorAll(".gallery-item");
        return Array.from(items).map(item => item.offsetWidth + gap);
      }

      function getMaxTranslate() {
        const containerWidth = track.parentElement.offsetWidth;
        const trackWidth = Array.from(track.querySelectorAll(".gallery-item"))
          .reduce((sum, item) => sum + item.offsetWidth + gap, 0) - gap;
        return Math.max(0, trackWidth - containerWidth);
      }

      function updateGalleryPosition() {
        track.style.transform = `translateX(-${currentTranslate}px)`;

        // Update button states
        const maxTranslate = getMaxTranslate();
        prevBtn.classList.toggle("opacity-50", currentTranslate === 0);
        prevBtn.classList.toggle("pointer-events-none", currentTranslate === 0);
        nextBtn.classList.toggle("opacity-50", currentTranslate >= maxTranslate);
        nextBtn.classList.toggle("pointer-events-none", currentTranslate >= maxTranslate);
      }

      prevBtn.addEventListener("click", () => {
        const itemWidths = getItemWidths();
        const scrollAmount = itemWidths[0] || 400; // Scroll by first item width or default
        currentTranslate = Math.max(0, currentTranslate - scrollAmount);
        updateGalleryPosition();
      });

      nextBtn.addEventListener("click", () => {
        const itemWidths = getItemWidths();
        const scrollAmount = itemWidths[0] || 400; // Scroll by first item width or default
        const maxTranslate = getMaxTranslate();
        currentTranslate = Math.min(maxTranslate, currentTranslate + scrollAmount);
        updateGalleryPosition();
      });

      // Initialize button states
      updateGalleryPosition();

      // Update on window resize
      window.addEventListener("resize", () => {
        const maxTranslate = getMaxTranslate();
        if (currentTranslate > maxTranslate) {
          currentTranslate = maxTranslate;
        }
        updateGalleryPosition();
      });
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initGalleryScroll);
  } else {
    initGalleryScroll();
  }

  // Mobile Gallery Slideshow
  function initMobileGallerySlideshow() {
    const slides = document.querySelectorAll('.mobile-slide');
    const dots = document.querySelectorAll('.mobile-dot');
    
    if (slides.length === 0 || dots.length === 0) return;
    
    let currentSlide = 0;
    const totalSlides = slides.length;
    let autoplayInterval;
    
    function showSlide(index) {
      // Hide all slides
      slides.forEach((slide, i) => {
        slide.classList.remove('opacity-100');
        slide.classList.add('opacity-0');
      });
      
      // Show current slide
      slides[index].classList.remove('opacity-0');
      slides[index].classList.add('opacity-100');
      
      // Update dots
      dots.forEach((dot, i) => {
        if (i === index) {
          dot.classList.add('bg-yellow', 'w-6');
          dot.classList.remove('bg-white/40', 'w-2');
        } else {
          dot.classList.remove('bg-yellow', 'w-6');
          dot.classList.add('bg-white/40', 'w-2');
        }
      });
    }
    
    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      showSlide(currentSlide);
    }
    
    function startAutoplay() {
      autoplayInterval = setInterval(nextSlide, 4000); // Change slide every 4 seconds
    }
    
    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }
    
    // Dot click handlers
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentSlide = index;
        showSlide(currentSlide);
        stopAutoplay();
        startAutoplay(); // Restart autoplay from this slide
      });
    });
    
    // Touch/swipe support for mobile
    let touchStartX = 0;
    let touchEndX = 0;
    const slideshow = document.querySelector('.mobile-gallery-slideshow');
    
    if (slideshow) {
      slideshow.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
        stopAutoplay();
      });
      
      slideshow.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
        startAutoplay();
      });
    }
    
    function handleSwipe() {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;
      
      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          // Swiped left - next slide
          nextSlide();
        } else {
          // Swiped right - previous slide
          currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
          showSlide(currentSlide);
        }
      }
    }
    
    // Pause on hover (for desktop testing)
    const slideshowContainer = document.querySelector('.lg\\:hidden');
    if (slideshowContainer) {
      slideshowContainer.addEventListener('mouseenter', stopAutoplay);
      slideshowContainer.addEventListener('mouseleave', startAutoplay);
    }
    
    // Start the slideshow
    startAutoplay();
    
    // Clean up on page unload
    window.addEventListener('beforeunload', stopAutoplay);
  }
  
  // Initialize mobile slideshow
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initMobileGallerySlideshow);
  } else {
    initMobileGallerySlideshow();
  }
</script>
