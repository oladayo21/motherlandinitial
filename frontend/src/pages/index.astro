// Match day detection
const matchDayActive = true//e//isMatchDay();
const currentMatch =  getTestMatchDay(); // Use test match for demo
---

<BaseLayout
  title="Motherland Berlin SC - Official Website"
  description="Official website of Motherland Berlin SC Football Club. Get the latest news, fixtures, tickets, and exclusive content."
>
  <!-- Conditional Hero - Match Day or Regular -->
  {matchDayActive && currentMatch ? (
    <MatchDayHero match={currentMatch} />
  ) : (
    <HeroCinematic />
  )}

  <!-- Latest News Section - Editorial Grid -->
  <Section background="black" className="border-t border-white/10">
    <Container className="max-w-[1920px]">
      <!-- Section Header -->
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="font-display text-5xl md:text-6xl font-black text-white uppercase">
            Latest <span class="text-yellow">News</span>
          </h2>
          <div class="h-1 w-20 bg-yellow mt-4"></div>
        </div>
        <a href="/news" class="group hidden md:flex items-center gap-3 text-yellow font-bold uppercase tracking-wider hover:gap-4 transition-all">
          <span>All Stories</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Editorial Grid Layout -->
      <div class="grid lg:grid-cols-12 gap-6">
        <!-- Main Feature - 8 columns -->
        <div class="lg:col-span-8">
          <article class="group relative h-[600px] overflow-hidden bg-black-900 border border-white/10">
            <img
              src={newsItems[0].image}
              alt={newsItems[0].title}
              class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent"></div>

            <!-- Content -->
            <div class="relative h-full flex flex-col justify-end p-8 lg:p-12">
              <div class="space-y-4">
                <div class="flex items-center gap-3">
                  <span class="bg-yellow px-3 py-1 text-xs font-bold text-black uppercase tracking-wider">
                    {newsItems[0].category}
                  </span>
                  <span class="text-white/60 text-sm">{newsItems[0].date}</span>
                </div>
                <h3 class="font-display text-4xl lg:text-5xl font-black text-white leading-tight">
                  {newsItems[0].title}
                </h3>
                <p class="text-white/80 text-lg max-w-2xl">
                  {newsItems[0].description}
                </p>
                <a href={newsItems[0].href} class="inline-flex items-center gap-2 text-yellow font-bold hover:gap-4 transition-all">
                  <span>Read Full Story</span>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </div>

            <!-- Decorative corner -->
            <div class="absolute top-0 left-0 w-24 h-24 border-t-4 border-l-4 border-yellow"></div>
          </article>
        </div>

        <!-- Side Stories - 4 columns -->
        <div class="lg:col-span-4 flex flex-col gap-6">
          {newsItems.slice(1, 3).map((item, index) => (
            <article class="group relative flex-1 overflow-hidden bg-black-900 border border-white/10 hover:border-yellow/50 transition-all">
              <div class="h-full">
                <!-- Image -->
                <div class="relative h-48 overflow-hidden">
                  <img
                    src={item.image}
                    alt={item.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent"></div>

                  <!-- Number Badge -->
                  <div class="absolute top-4 right-4 w-10 h-10 bg-yellow flex items-center justify-center">
                    <span class="font-display text-xl font-black text-black">{index + 2}</span>
                  </div>
                </div>

                <!-- Content -->
                <div class="p-6">
                  <div class="flex items-center gap-3 mb-3">
                    <span class="text-yellow text-xs font-bold uppercase tracking-wider">
                      {item.category}
                    </span>
                    <span class="text-white/40 text-xs">{item.date}</span>
                  </div>
                  <h3 class="font-display text-xl font-bold text-white mb-2 group-hover:text-yellow transition-colors">
                    {item.title}
                  </h3>
                  <p class="text-white/60 text-sm line-clamp-2">
                    {item.description}
                  </p>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>

      <!-- Bottom News Bar -->
      <div class="mt-12 grid md:grid-cols-3 gap-6">
        {newsItems.slice(3, 6).map((item) => (
          <article class="group bg-black-900 border border-white/10 p-6 hover:border-yellow/50 transition-all">
            <div class="flex items-start gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-yellow text-xs font-bold uppercase tracking-wider">
                    {item.category}
                  </span>
                  <span class="text-white/40 text-xs">{item.date}</span>
                </div>
                <h3 class="font-display text-lg font-bold text-white mb-2 group-hover:text-yellow transition-colors">
                  {item.title}
                </h3>
                <a href={item.href} class="text-yellow text-sm font-medium hover:text-yellow-400 transition-colors">
                  Read More →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Mobile View All Button -->
      <div class="mt-8 text-center md:hidden">
        <a href="/news" class="inline-flex items-center gap-2 bg-yellow px-8 py-3 font-bold text-black uppercase tracking-wider hover:bg-yellow-400 transition-colors">
          View All News
        </a>
      </div>
    </Container>
  </Section>

  <!-- Fixtures & Results - Magazine Style -->
  <Section background="custom" className="bg-gradient-to-br from-gold-900 via-gold-800 to-black relative overflow-hidden">
    <!-- Sophisticated Pattern Background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[repeating-linear-gradient(45deg,rgba(208,170,68,0.1)_0px,transparent_2px,transparent_10px,rgba(208,170,68,0.1)_12px)]"></div>
      <div class="absolute inset-0 bg-[repeating-linear-gradient(-45deg,rgba(208,170,68,0.05)_0px,transparent_2px,transparent_20px,rgba(208,170,68,0.05)_22px)]"></div>
    </div>
    <!-- Gradient Overlay for Depth -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"></div>

    <Container className="relative z-10 max-w-[1920px]">
      <!-- Section Header -->
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="font-display text-5xl md:text-6xl font-black text-white uppercase">
            Fixtures & <span class="text-yellow">Results</span>
          </h2>
          <div class="h-1 w-20 bg-yellow mt-4"></div>
        </div>
        <a href="/matches" class="group hidden md:flex items-center gap-3 text-white font-bold uppercase tracking-wider hover:gap-4 transition-all hover:text-yellow">
          <span>Full Schedule</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Matches Grid -->
      <div class="grid lg:grid-cols-3 gap-6">
        {matches.map((match, index) => (
          <div class={`group relative bg-black border-2 ${match.variant === 'highlighted' ? 'border-yellow' : 'border-gold/30'} overflow-hidden transition-all hover:shadow-[0_10px_40px_rgba(208,170,68,0.3)] hover:-translate-y-1 hover:border-yellow`}>
            <!-- Status Badge -->
            <div class="absolute top-0 right-0 z-10">
              {match.status === 'finished' ? (
                <div class="bg-green-500 px-4 py-2 text-xs font-bold text-white uppercase">
                  FT
                </div>
              ) : match.status === 'live' ? (
                <div class="bg-red-600 px-4 py-2 text-xs font-bold text-white uppercase flex items-center gap-2">
                  <span class="inline-block w-2 h-2 bg-white rounded-full animate-pulse"></span>
                  LIVE
                </div>
              ) : (
                <div class="bg-gold px-4 py-2 text-xs font-bold text-black uppercase">
                  {match.time || 'TBD'}
                </div>
              )}
            </div>

            <!-- Match Content -->
            <div class="p-8">
              <!-- Competition & Date -->
              <div class="mb-6">
                <div class="text-yellow text-xs font-bold uppercase tracking-wider mb-1">
                  {match.competition}
                </div>
                <div class="text-white/60 text-sm">
                  {match.date} {match.venue && `• ${match.venue}`}
                </div>
              </div>

              <!-- Teams & Score -->
              <div class="space-y-4">
                {/* Home Team */}
                <div class="flex items-center justify-between">
                  <div class={`font-display text-xl font-bold ${match.homeTeam === 'Motherland SC' ? 'text-yellow' : 'text-white'}`}>
                    {match.homeTeam}
                  </div>
                  {match.status === 'finished' && (
                    <div class="text-3xl font-black text-white">
                      {match.homeScore}
                    </div>
                  )}
                </div>

                {/* VS or Score Separator */}
                <div class="text-center">
                  {match.status === 'finished' ? (
                    <div class="text-white/30 text-xl">-</div>
                  ) : (
                    <div class="text-yellow font-bold text-sm uppercase tracking-wider">VS</div>
                  )}
                </div>

                {/* Away Team */}
                <div class="flex items-center justify-between">
                  <div class={`font-display text-xl font-bold ${match.awayTeam === 'Motherland SC' ? 'text-yellow' : 'text-white'}`}>
                    {match.awayTeam}
                  </div>
                  {match.status === 'finished' && (
                    <div class="text-3xl font-black text-white">
                      {match.awayScore}
                    </div>
                  )}
                </div>
              </div>

              {/* CTA */}
              <div class="mt-6 pt-6 border-t border-white/10">
                <a href="/matches" class="flex items-center justify-between text-yellow hover:text-yellow-400 transition-colors">
                  <span class="text-sm font-bold uppercase tracking-wider">
                    {match.status === 'finished' ? 'Match Report' : 'Match Details'}
                  </span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>

            {/* Highlight indicator for next match */}
            {match.variant === 'highlighted' && (
              <div class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-gold via-yellow to-gold"></div>
            )}
          </div>
        ))}
      </div>

      <!-- Live Scores Ticker -->
      <div class="mt-12 bg-black/80 backdrop-blur-sm border border-gold/20 p-6 relative overflow-hidden">
        <div class="flex items-center gap-6">
          <span class="font-bold text-gold text-sm uppercase tracking-wider flex-shrink-0">Live Scores</span>
          <div class="overflow-hidden flex-1">
            <div class="animate-ticker whitespace-nowrap">
              <span class="text-white/80 font-medium">
                Bundesliga: Bayern 2-1 Dortmund (78') • Leipzig 0-0 Frankfurt (HT) • Premier League: Arsenal 3-2 Chelsea (FT) • Man City 1-0 Liverpool (45+2') • La Liga: Real Madrid 4-1 Barcelona (FT) •
              </span>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Gallery Section - Magazine Style -->
  <Section background="black" className="border-t border-white/10">
    <Container className="max-w-[1920px]">
      <!-- Section Header -->
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="font-display text-5xl md:text-6xl font-black text-white uppercase">
            Media <span class="text-yellow">Gallery</span>
          </h2>
          <div class="h-1 w-20 bg-yellow mt-4"></div>
        </div>
        <div class="hidden md:flex gap-3">
          <button
            class="gallery-prev group relative overflow-hidden border border-white/30 p-4 text-white transition-all hover:border-yellow"
            aria-label="Previous"
          >
            <svg class="h-6 w-6 group-hover:text-yellow transition-colors" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="square" stroke-linejoin="miter" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
          <button
            class="gallery-next group relative overflow-hidden border border-white/30 p-4 text-white transition-all hover:border-yellow"
            aria-label="Next"
          >
            <svg class="h-6 w-6 group-hover:text-yellow transition-colors" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="square" stroke-linejoin="miter" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Gallery Grid -->
      <div class="gallery-scroll overflow-x-hidden">
        <div class="gallery-track flex gap-6 transition-transform duration-500">
          <!-- Gallery Item 1 - Featured Large -->
          <div class="gallery-item relative flex-none w-[600px] group">
            <div class="relative h-[400px] overflow-hidden bg-black-900 border border-white/10">
              <img
                src="https://images.unsplash.com/photo-1522778119026-d647f0596c20?q=80&w=2070"
                alt="Championship Victory"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>

              <!-- Content Overlay -->
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <div class="mb-2">
                  <span class="bg-yellow px-3 py-1 text-xs font-bold text-black uppercase">Featured</span>
                </div>
                <h3 class="font-display text-2xl font-bold text-white mb-1">Championship Victory</h3>
                <p class="text-white/70 text-sm">Celebrating our historic title win</p>
              </div>

              <!-- Corner Accent -->
              <div class="absolute top-0 right-0 w-16 h-16 border-t-4 border-r-4 border-yellow"></div>
            </div>
          </div>

          <!-- Gallery Item 2 - Video -->
          <div class="gallery-item relative flex-none w-[400px] group">
            <div class="relative h-[400px] overflow-hidden bg-black-900 border border-white/10">
              <img
                src="https://images.unsplash.com/photo-1516475429286-465d815a0df7?q=80&w=2080"
                alt="Training Highlights"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-black/40"></div>

              <!-- Play Button -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="bg-yellow/90 p-6 group-hover:bg-yellow transition-colors">
                  <svg class="h-12 w-12 text-black" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"></path>
                  </svg>
                </div>
              </div>

              <!-- Video Duration -->
              <div class="absolute top-4 right-4 bg-black/80 px-2 py-1 text-xs text-white">
                3:45
              </div>

              <!-- Title -->
              <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent">
                <h3 class="font-display text-lg font-bold text-white">Training Highlights</h3>
              </div>
            </div>
          </div>

          <!-- Gallery Item 3 - Square -->
          <div class="gallery-item relative flex-none w-[400px] group">
            <div class="relative h-[400px] overflow-hidden bg-black-900 border border-white/10">
              <img
                src="https://images.unsplash.com/photo-1508098682722-e99c43a406b2?q=80&w=2070"
                alt="Fan Celebration"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>

              <!-- Content -->
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <h3 class="font-display text-lg font-bold text-white">Fan Celebration</h3>
                <p class="text-white/60 text-sm">Derby day atmosphere</p>
              </div>
            </div>
          </div>

          <!-- Gallery Item 4 - Portrait -->
          <div class="gallery-item relative flex-none w-[300px] group">
            <div class="relative h-[400px] overflow-hidden bg-black-900 border border-white/10">
              <img
                src="https://images.unsplash.com/photo-1560272564-c83b66b1ad12?q=80&w=2049"
                alt="Player Portrait"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent"></div>

              <!-- Content -->
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <span class="text-yellow text-xs font-bold uppercase">Player Focus</span>
                <h3 class="font-display text-lg font-bold text-white mt-1">Lucas Rodriguez</h3>
              </div>
            </div>
          </div>

          <!-- Gallery Item 5 - Video Wide -->
          <div class="gallery-item relative flex-none w-[500px] group">
            <div class="relative h-[400px] overflow-hidden bg-black-900 border border-white/10">
              <img
                src="https://images.unsplash.com/photo-1551958219-acbc608c6377?q=80&w=2070"
                alt="Youth Academy"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-black/40"></div>

              <!-- Play Button -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="bg-yellow/90 p-6 group-hover:bg-yellow transition-colors">
                  <svg class="h-12 w-12 text-black" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"></path>
                  </svg>
                </div>
              </div>

              <!-- Title -->
              <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent">
                <span class="text-yellow text-xs font-bold uppercase">Documentary</span>
                <h3 class="font-display text-lg font-bold text-white mt-1">Academy: The Future</h3>
              </div>
            </div>
          </div>

          <!-- Gallery Item 6 -->
          <div class="gallery-item relative flex-none w-[400px] group">
            <div class="relative h-[400px] overflow-hidden bg-black-900 border border-white/10">
              <img
                src="https://images.unsplash.com/photo-1543326727-cf6c39e8f84c?q=80&w=2070"
                alt="Team Huddle"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>

              <!-- Content -->
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <h3 class="font-display text-lg font-bold text-white">Unity & Strength</h3>
                <p class="text-white/60 text-sm">Pre-match ritual</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Gallery Categories -->
      <div class="mt-12 flex flex-wrap justify-center gap-4">
        <button class="bg-yellow px-6 py-3 font-bold text-black uppercase tracking-wider hover:bg-yellow-400 transition-colors">
