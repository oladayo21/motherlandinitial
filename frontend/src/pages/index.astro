---

<BaseLayout
  title="Motherland Berlin SC - Official Website"
  description="Official website of Motherland Berlin SC Football Club. Get the latest news, fixtures, tickets, and exclusive content."
>
  <!-- Hero Section -->
  <HeroCinematic />

  <!-- Latest News Section -->
  <Section background="black" noPadding className="py-20 md:py-24 lg:py-32 bg-black">
    <Container className="max-w-[1920px]">
      <!-- Section Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="font-display text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-white uppercase">
            Latest <span class="text-yellow">News</span>
          </h2>
          <div class="h-1 w-20 bg-yellow mt-4"></div>
        </div>
        <LinkButton href="/news" variant="with-arrow" className="hidden md:inline-flex">
          All Stories
        </LinkButton>
      </div>

      <!-- News Ticker - Magazine Style -->
      <div class="news-ticker mb-8 lg:mb-12 overflow-hidden">
        <div class="ticker-scroll flex items-center gap-4 whitespace-nowrap">
          {newsItems.map((item, index) => (
            <>
              <a 
                href={item.href} 
                class={`font-body text-xs font-bold tracking-[0.2em] uppercase transition-colors hover:text-yellow ${
                  index % 2 === 0 ? 'text-yellow' : 'text-white/60 hover:text-yellow'
                }`}
              >
                {item.title}
              </a>
              <span class="text-yellow/40">•</span>
            </>
          ))}
          {/* Duplicate for seamless loop */}
          {newsItems.map((item, index) => (
            <>
              <a 
                href={item.href} 
                class={`font-body text-xs font-bold tracking-[0.2em] uppercase transition-colors hover:text-yellow ${
                  index % 2 === 0 ? 'text-yellow' : 'text-white/60 hover:text-yellow'
                }`}
              >
                {item.title}
              </a>
              <span class="text-yellow/40">•</span>
            </>
          ))}
        </div>
      </div>

      <!-- Editorial Grid Layout -->
      <div class="grid lg:grid-cols-12 gap-6">
        <!-- Main Feature - 8 columns -->
        <div class="lg:col-span-8">
          <article class="group relative h-[600px] overflow-hidden bg-zinc-900 border border-white/5 transition-all hover:shadow-2xl">
            <img
              src={newsItems[0].image}
              alt={newsItems[0].title}
              class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent"></div>

            <!-- Content -->
            <div class="relative h-full flex flex-col justify-end p-6 md:p-8 lg:p-12">
              <div class="space-y-4">
                <div class="flex items-center gap-3">
                  <span class="bg-yellow px-3 py-1 text-xs font-bold text-black uppercase tracking-wider">
                    {newsItems[0].category}
                  </span>
                  <span class="text-white/60 text-sm">{newsItems[0].date}</span>
                </div>
                <h3 class="font-display text-3xl md:text-4xl lg:text-5xl font-black text-white leading-tight">
                  {newsItems[0].title}
                </h3>
                <p class="text-white/80 text-lg max-w-2xl">
                  {newsItems[0].description}
                </p>
                <a href={newsItems[0].href} class="inline-flex items-center gap-2 text-yellow font-bold hover:gap-4 transition-all">
                  <span>Read Full Story</span>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </div>

            <!-- Decorative corner -->
            <div class="absolute top-0 left-0 w-24 h-24 border-t-4 border-l-4 border-yellow"></div>
          </article>
        </div>

        <!-- Side Stories - 4 columns -->
        <div class="lg:col-span-4 flex flex-col gap-6">
          {newsItems.slice(1, 3).map((item, index) => (
            <div class="flex-1">
              <ArticleCard
                title={item.title}
                description={item.description}
                image={item.image}
                category={item.category}
                date={item.date}
                href={item.href}
                variant="overlay"
                numberBadge={index + 2}
                className="h-full"
              />
            </div>
          ))}
        </div>
      </div>

      <!-- Bottom News Bar -->
      <div class="mt-16 grid md:grid-cols-3 gap-6">
        {newsItems.slice(3, 6).map((item) => (
          <article class="group bg-zinc-900 border border-white/5 p-6 transition-all hover:bg-zinc-800 hover:shadow-lg">
            <div class="flex items-start gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-yellow text-xs font-bold uppercase tracking-wider">
                    {item.category}
                  </span>
                  <span class="text-white/40 text-xs">{item.date}</span>
                </div>
                <h3 class="font-display text-base sm:text-lg font-bold text-white mb-2 group-hover:text-yellow transition-colors">
                  {item.title}
                </h3>
                <a href={item.href} class="text-yellow text-sm font-medium hover:text-yellow-400 transition-colors">
                  Read More →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Mobile View All Button -->
      <div class="mt-8 text-center md:hidden">
        <Button href="/news" variant="primary">
          View All News
        </Button>
      </div>
    </Container>
  </Section>

  <!-- Fixtures & Results -->
  <Section background="zinc" noPadding className="py-20 md:py-32 lg:py-40 bg-zinc-900 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.05) 35px, rgba(255,255,255,.05) 70px);"></div>
    </div>

    <Container className="relative z-10 max-w-[1920px]">
      <!-- Section Header -->
      <div class="flex items-center justify-between mb-16">
        <div>
          <h2 class="font-display text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-white uppercase">
            Fixtures & <span class="text-yellow">Results</span>
          </h2>
          <div class="h-1 w-20 bg-yellow mt-4"></div>
        </div>
        <LinkButton href="/matches" variant="with-arrow" className="hidden md:inline-flex">
          Full Schedule
        </LinkButton>
      </div>

      <!-- Matches Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        {matches.map((match, index) => (
          <div class={`group relative ${match.variant === 'highlighted' ? 'bg-gradient-to-br from-yellow via-yellow to-yellow-600 border-2 border-black shadow-xl' : 'bg-zinc-900 border border-white/20'} overflow-hidden transition-all hover:shadow-2xl hover:-translate-y-1`}>
            <!-- Status Badge -->
            <div class="absolute top-0 right-0 z-10">
              {match.status === 'finished' ? (
                <div class="bg-green-500 px-4 py-2 text-xs font-bold text-white uppercase">
                  FT
                </div>
              ) : match.status === 'live' ? (
                <div class="bg-red-600 px-4 py-2 text-xs font-bold text-white uppercase flex items-center gap-2">
                  <span class="inline-block w-2 h-2 bg-white rounded-full animate-pulse"></span>
                  LIVE
                </div>
              ) : (
                <div class={`px-4 py-2 text-xs font-bold uppercase ${match.variant === 'highlighted' ? 'bg-black text-yellow' : 'bg-gold text-black'}`}>
                  {match.time || 'TBD'}
                </div>
              )}
            </div>

            <!-- Match Content -->
            <div class="flex flex-col h-full">
              <div class="p-6 md:p-8 flex-1">
                <!-- Competition & Date -->
                <div class="mb-6">
                  <div class={`text-xs font-bold uppercase tracking-wider mb-1 ${match.variant === 'highlighted' ? 'text-black/70' : 'text-yellow'}`}>
                    {match.competition}
                  </div>
                  <div class={`text-sm ${match.variant === 'highlighted' ? 'text-black/60' : 'text-white/60'}`}>
                    {match.date} {match.venue && `• ${match.venue}`}
                  </div>
                </div>

                <!-- Teams & Score -->
                <div class="space-y-4">
                  {/* Home Team */}
                  <div class="flex items-center justify-between">
                    <div class={`font-display text-xl font-bold ${match.variant === 'highlighted' ? 'text-black' : (match.homeTeam === 'Motherland SC' ? 'text-yellow' : 'text-white')}`}>
                      {match.homeTeam}
                    </div>
                    {match.status === 'finished' && (
                      <div class={`text-3xl font-black ${match.variant === 'highlighted' ? 'text-black' : 'text-white'}`}>
                        {match.homeScore}
                      </div>
                    )}
                  </div>

                  {/* VS or Score Separator */}
                  <div class="text-center">
                    {match.status === 'finished' ? (
                      <div class={`text-xl ${match.variant === 'highlighted' ? 'text-black/30' : 'text-white/30'}`}>-</div>
                    ) : (
                      <div class={`font-bold text-sm uppercase tracking-wider ${match.variant === 'highlighted' ? 'text-black' : 'text-yellow'}`}>VS</div>
                    )}
                  </div>

                  {/* Away Team */}
                  <div class="flex items-center justify-between">
                    <div class={`font-display text-xl font-bold ${match.variant === 'highlighted' ? 'text-black' : (match.awayTeam === 'Motherland SC' ? 'text-yellow' : 'text-white')}`}>
                      {match.awayTeam}
                    </div>
                    {match.status === 'finished' && (
                      <div class={`text-3xl font-black ${match.variant === 'highlighted' ? 'text-black' : 'text-white'}`}>
                        {match.awayScore}
                      </div>
                    )}
                  </div>
                </div>
              </div>

              {/* CTA - Now always at bottom */}
              <div class={`px-6 md:px-8 pb-6 md:pb-8`}>
                <div class={`pt-6 border-t ${match.variant === 'highlighted' ? 'border-black/20' : 'border-white/10'}`}>
                  <a href="/matches" class={`flex items-center justify-between transition-colors ${match.variant === 'highlighted' ? 'text-black hover:text-black/70' : 'text-yellow hover:text-yellow-400'}`}>
                    <span class="text-sm font-bold uppercase tracking-wider">
                      {match.status === 'finished' ? 'Match Report' : 'Match Preview'}
                    </span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>

            {/* Highlight indicator for next match */}
            {match.variant === 'highlighted' && (
              <div class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-gold via-yellow to-gold"></div>
            )}
          </div>
        ))}
      </div>

    </Container>
  </Section>

  <!-- Gallery Section -->
  <Section background="black" noPadding className="py-20 md:py-32 lg:py-40 bg-black">
    <Container className="max-w-[1920px]">
      <!-- Section Header -->
      <div class="flex items-center justify-between mb-16">
        <div>
          <h2 class="font-display text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-white uppercase">
            Media <span class="text-yellow">Gallery</span>
          </h2>
          <div class="h-1 w-20 bg-yellow mt-4"></div>
        </div>
        <div class="hidden md:flex gap-3">
          <button
            class="gallery-prev group relative overflow-hidden border border-white/30 p-4 text-white transition-all hover:border-yellow"
            aria-label="Previous"
          >
            <svg class="h-6 w-6 group-hover:text-yellow transition-colors" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="square" stroke-linejoin="miter" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
          <button
            class="gallery-next group relative overflow-hidden border border-white/30 p-4 text-white transition-all hover:border-yellow"
            aria-label="Next"
          >
            <svg class="h-6 w-6 group-hover:text-yellow transition-colors" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="square" stroke-linejoin="miter" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Gallery Grid - Desktop Scroll / Mobile Slideshow -->
      <div class="relative">
        <!-- Desktop Scroll Indicators -->
        <div class="hidden lg:block absolute left-0 top-1/2 -translate-y-1/2 w-20 h-full bg-gradient-to-r from-black to-transparent z-10 pointer-events-none opacity-80"></div>
        <div class="hidden lg:block absolute right-0 top-1/2 -translate-y-1/2 w-20 h-full bg-gradient-to-l from-black to-transparent z-10 pointer-events-none opacity-80"></div>
        
        <!-- Mobile Slideshow -->
        <div class="lg:hidden relative h-[400px] overflow-hidden">
          <div class="mobile-gallery-slideshow relative h-full">
            <!-- Mobile Gallery Items -->
            {[
              { src: "https://images.unsplash.com/photo-1522778119026-d647f0596c20?q=80&w=2070", title: "Championship Victory", category: "Featured" },
              { src: "https://images.unsplash.com/photo-1516475429286-465d815a0df7?q=80&w=2080", title: "Training Highlights", category: "Video", duration: "3:45" },
              { src: "https://images.unsplash.com/photo-1508098682722-e99c43a406b2?q=80&w=2070", title: "Fan Celebration", category: "Matchday" },
              { src: "https://images.unsplash.com/photo-1560272564-c83b66b1ad12?q=80&w=2049", title: "Lucas Rodriguez", category: "Player Focus" },
              { src: "https://images.unsplash.com/photo-1551958219-acbc608c6377?q=80&w=2070", title: "Academy: The Future", category: "Documentary" },
              { src: "https://images.unsplash.com/photo-1543326727-cf6c39e8f84c?q=80&w=2070", title: "Unity & Strength", category: "Behind the Scenes" }
            ].map((item, index) => (
              <div class={`mobile-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`} data-slide={index}>
                <div class="relative h-full">
                  <img src={item.src} alt={item.title} class="w-full h-full object-cover" />
                  <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
                  
                  {/* Content Overlay */}
                  <div class="absolute bottom-0 left-0 right-0 p-6">
                    <div class="mb-2">
                      <span class="bg-yellow/90 px-3 py-1 text-xs font-bold text-black uppercase">{item.category}</span>
                      {item.duration && (
                        <span class="ml-2 bg-black/80 px-2 py-1 text-xs text-white">{item.duration}</span>
                      )}
                    </div>
                    <h3 class="font-display text-2xl font-bold text-white">{item.title}</h3>
                  </div>
                  
                  {/* Play button for videos */}
                  {item.duration && (
                    <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
                      <div class="bg-yellow/90 p-4">
                        <svg class="h-8 w-8 text-black" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M8 5v14l11-7z"></path>
                        </svg>
                      </div>
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
          
          <!-- Mobile Slideshow Dots -->
          <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2 z-20">
            {[0,1,2,3,4,5].map(i => (
              <button class={`mobile-dot h-2 w-2 rounded-full transition-all ${i === 0 ? 'bg-yellow w-6' : 'bg-white/40'}`} data-dot={i} aria-label={`Go to slide ${i + 1}`}></button>
            ))}
          </div>
        </div>
        
        <!-- Desktop Horizontal Scroll -->
        <div class="hidden lg:block gallery-scroll overflow-x-hidden">
          <div class="gallery-track flex gap-6 transition-transform duration-500">
          <!-- Gallery Item 1 - Featured Large -->
          <div class="gallery-item relative flex-none w-[600px] group">
            <div class="relative h-[400px] overflow-hidden bg-zinc-900 border border-white/5 transition-all group-hover:shadow-xl">
              <img
                src="https://images.unsplash.com/photo-1522778119026-d647f0596c20?q=80&w=2070"
                alt="Championship Victory"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>

              <!-- Content Overlay -->
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <div class="mb-2">
                  <span class="bg-yellow px-3 py-1 text-xs font-bold text-black uppercase">Featured</span>
                </div>
                <h3 class="font-display text-xl md:text-2xl font-bold text-white mb-1">Championship Victory</h3>
                <p class="text-white/70 text-sm">Celebrating our historic title win</p>
              </div>

              <!-- Corner Accent -->
              <div class="absolute top-0 right-0 w-16 h-16 border-t-4 border-r-4 border-yellow"></div>
            </div>
          </div>

          <!-- Gallery Item 2 - Video -->
          <div class="gallery-item relative flex-none w-[400px] group">
            <div class="relative h-[400px] overflow-hidden bg-zinc-900 border border-white/5 transition-all group-hover:shadow-xl">
              <img
                src="https://images.unsplash.com/photo-1516475429286-465d815a0df7?q=80&w=2080"
                alt="Training Highlights"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-black/40"></div>

              <!-- Play Button -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="bg-yellow/90 p-6 group-hover:bg-yellow transition-colors">
                  <svg class="h-12 w-12 text-black" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"></path>
                  </svg>
                </div>
              </div>

              <!-- Video Duration -->
              <div class="absolute top-4 right-4 bg-black/80 px-2 py-1 text-xs text-white">
                3:45
              </div>

              <!-- Title -->
              <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent">
                <h3 class="font-display text-lg font-bold text-white">Training Highlights</h3>
              </div>
            </div>
          </div>

          <!-- Gallery Item 3 - Square -->
          <div class="gallery-item relative flex-none w-[400px] group">
            <div class="relative h-[400px] overflow-hidden bg-zinc-900 border border-white/5 transition-all group-hover:shadow-xl">
              <img
                src="https://images.unsplash.com/photo-1508098682722-e99c43a406b2?q=80&w=2070"
                alt="Fan Celebration"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>

              <!-- Content -->
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <h3 class="font-display text-lg font-bold text-white">Fan Celebration</h3>
                <p class="text-white/60 text-sm">Derby day atmosphere</p>
              </div>
            </div>
          </div>

          <!-- Gallery Item 4 - Portrait -->
