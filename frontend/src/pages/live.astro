<style>
  /* Live background animations */
  .live-bg-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(255, 214, 2, 0.1) 0%,
      transparent 50%
    );
    animation: pulseGradient 4s ease-in-out infinite;
  }

  @keyframes pulseGradient {
    0%, 100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.2);
      opacity: 1;
    }
  }

  .live-pulse-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 214, 2, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 214, 2, 0.02) 1px, transparent 1px);
    background-size: 40px 40px;
    animation: gridPulse 8s linear infinite;
  }

  @keyframes gridPulse {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(40px, 40px);
    }
  }

  /* Score animations */
  .score-home, .score-away {
