<script>
  // Gallery filtering functionality
  function initGalleryFilters() {
    const filterButtons = document.querySelectorAll('.gallery-filter');
    const videoSection = document.querySelector('[data-section="videos"]');
    const imageSection = document.querySelector('[data-section="images"]');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter');

        // Update active button
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-yellow', 'text-black');
          btn.classList.add('border', 'border-white/30', 'text-white');
        });
        button.classList.add('bg-yellow', 'text-black');
        button.classList.remove('border', 'border-white/30', 'text-white');

        // Show/hide sections based on filter
        if (filter === 'all-media') {
          // Show both sections
          videoSection.style.display = 'block';
          imageSection.style.display = 'block';
          // Re-trigger animations
          rerenderAnimations();
        } else if (filter === 'videos') {
          // Show only videos
          videoSection.style.display = 'block';
          imageSection.style.display = 'none';
          rerenderAnimations();
        } else if (filter === 'images') {
          // Show only images
          videoSection.style.display = 'none';
          imageSection.style.display = 'block';
          rerenderAnimations();
        }
      });
    });
  }

  // Re-trigger scroll animations for visible elements
  function rerenderAnimations() {
    setTimeout(() => {
      const visibleElements = document.querySelectorAll('.scroll-animate');
      visibleElements.forEach(el => {
        if (el.offsetParent !== null) { // Element is visible
          el.classList.remove('in-view');
          el.style.opacity = '0';
          el.style.transform = 'translateY(30px)';
          
          setTimeout(() => {
            el.classList.add('in-view');
            el.style.opacity = '1';
            el.style.transform = 'translateY(0)';
          }, 50);
        }
      });
    }, 100);
  }

  // Parallax effect for hero background
  function initParallax() {
    const parallaxBg = document.querySelector('.parallax-bg');
    if (!parallaxBg) return;

    function updateParallax() {
      const scrolled = window.pageYOffset;
      const speed = 0.5;
      parallaxBg.style.transform = `translateY(${scrolled * speed}px)`;
    }

    window.addEventListener('scroll', updateParallax);
  }

  // Scroll animations
  function initScrollAnimations() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);

    document.querySelectorAll('.scroll-animate').forEach(el => {
      observer.observe(el);
    });
  }

  // Initialize all functionality
  function init() {
    initGalleryFilters();
    initParallax();
    initScrollAnimations();
  }

  // Run when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>

