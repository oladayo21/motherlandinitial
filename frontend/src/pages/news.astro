// Separate featured story from regular news
const featuredStory = allNews.find((item) => item.featured);
const regularNews = filteredNews.filter((item) => !item.featured);

// Pagination setup
const itemsPerPage = 9;
const currentPage = 1;
const totalPages = Math.ceil(regularNews.length / itemsPerPage);
const paginatedNews = regularNews.slice(
  (currentPage - 1) * itemsPerPage,
  currentPage * itemsPerPage,
);
---

<BaseLayout
  title="Latest News - Motherland Berlin SC"
  description="Get the latest news, match reports, transfer updates, and exclusive content from Motherland Berlin SC."
>
  {/* Hero Section - Split Screen Magazine Style */}
  <section class="hero-section relative overflow-hidden bg-black pt-24 pb-0">
    {/* Grid pattern background */}
    <div class="absolute inset-0 overflow-hidden">
      <div class="grid-bg absolute inset-0"></div>

      {/* Floating geometric shapes */}
      <div class="shapes-container absolute inset-0">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
        <div class="shape shape-5"></div>
      </div>

      {/* Noise texture overlay */}
      <div class="noise-overlay absolute inset-0"></div>
    </div>

    <Container className="relative z-10">
      {/* Split Layout Header */}
      <div class="split-header mb-12 grid items-center gap-8 lg:grid-cols-2">
        {/* Left Side - Title */}
        <div class="title-section">
          <div class="category-ticker mb-4 overflow-hidden">
            <div
              class="category-scroll flex items-center gap-4 whitespace-nowrap"
            >
              <span
                class="font-body text-yellow text-xs font-bold tracking-[0.2em] uppercase"
                >Match Reports</span
              >
              <span class="text-yellow/40">•</span>
              <span
                class="font-body text-xs font-bold tracking-[0.2em] text-white/60 uppercase"
                >Player Interviews</span
              >
              <span class="text-yellow/40">•</span>
              <span
                class="font-body text-xs font-bold tracking-[0.2em] text-white/60 uppercase"
                >Transfer News</span
              >
              <span class="text-yellow/40">•</span>
              <span
                class="font-body text-xs font-bold tracking-[0.2em] text-white/60 uppercase"
                >Club Updates</span
              >
              <span class="text-yellow/40">•</span>
              <span
                class="font-body text-yellow text-xs font-bold tracking-[0.2em] uppercase"
                >Academy News</span
              >
              <span class="text-yellow/40">•</span>
              <span
                class="font-body text-xs font-bold tracking-[0.2em] text-white/60 uppercase"
                >Women's Team</span
              >
              <span class="text-yellow/40">•</span>
              <span
                class="font-body text-xs font-bold tracking-[0.2em] text-white/60 uppercase"
                >Community</span
              >
              <span class="text-yellow/40">•</span>
              <span
                class="font-body text-yellow text-xs font-bold tracking-[0.2em] uppercase"
                >Match Reports</span
              >
              <span class="text-yellow/40">•</span>
              <span
                class="font-body text-xs font-bold tracking-[0.2em] text-white/60 uppercase"
                >Player Interviews</span
              >
            </div>
          </div>

          <h1 class="hero-title relative">
            <span class="title-line block overflow-hidden">
              <span
                class="title-text font-display block text-7xl font-black text-white uppercase lg:text-8xl xl:text-9xl"
              >
                Latest
              </span>
            </span>
            <span class="title-line block overflow-hidden">
              <span
                class="title-text font-display text-yellow block text-7xl font-black uppercase lg:text-8xl xl:text-9xl"
              >
                News
              </span>
            </span>
          </h1>

          <p
            class="hero-description font-body mt-6 max-w-lg text-lg text-white/60"
          >
            Breaking stories, exclusive interviews, and real-time match updates
            from Motherland Berlin SC
          </p>
        </div>

        {/* Right Side - Date & Time */}
        <div class="date-section hidden text-right lg:block">
          <div class="date-display relative border-l border-white/10 p-8">
            {/* Background pattern */}
            <div
              class="from-yellow/10 via-yellow/5 absolute inset-0 bg-gradient-to-br to-transparent"
            >
            </div>

            {/* Date content with better contrast */}
            <div class="relative z-10">
              <div
                class="current-date font-display text-5xl leading-none font-black text-white/50 uppercase"
              >
                {new Date().toLocaleDateString("en-US", { weekday: "long" })}
              </div>
              <div
                class="current-time font-display text-yellow/30 my-2 text-9xl leading-none font-black"
              >
                {
                  new Date()
                    .toLocaleDateString("en-US", { day: "numeric" })
                    .padStart(2, "0")
                }
              </div>
              <div
                class="month-year font-body text-base font-bold tracking-[0.4em] text-white uppercase"
              >
                {
                  new Date().toLocaleDateString("en-US", {
                    month: "long",
                    year: "numeric",
