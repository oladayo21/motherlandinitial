                  <div class="mb-2 flex items-center gap-2">
                    <div class="bg-yellow h-2 w-2 animate-pulse rounded-full" />
                    <span class="font-body text-yellow text-xs font-bold tracking-wider uppercase">
                      Featured Story
                    </span>
                  </div>
                  <div class="from-yellow to-yellow/20 h-1 w-full bg-gradient-to-r" />
                </div>

                {/* Article Stats */}
                <div class="article-stats space-y-4">
                  <div class="stat-row">
                    <span class="font-body mb-1 block text-xs text-white/40 uppercase">
                      Category
                    </span>
                    <span class="font-body text-yellow text-sm font-bold">
                      {featuredStory.category}
                    </span>
                  </div>

                  <div class="stat-row">
                    <span class="font-body mb-1 block text-xs text-white/40 uppercase">
                      Published
                    </span>
                    <span class="font-body text-sm font-medium text-white">
                      {featuredStory.date}
                    </span>
                  </div>

                  <div class="stat-row">
                    <span class="font-body mb-1 block text-xs text-white/40 uppercase">
