              {/* Decorative elements */}
              <div class="mt-6 flex justify-end gap-2">
                <div class="bg-yellow/50 h-px w-12"></div>
                <div class="bg-yellow/30 h-px w-6"></div>
                <div class="bg-yellow/20 h-px w-3"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Featured Story - Magazine Layout */}
      {
        featuredStory && (
          <div class="magazine-feature relative">
            <div class="feature-grid border-yellow grid gap-0 border-t-4 bg-black lg:grid-cols-12">
              {/* Article Sidebar - Quick Info */}
