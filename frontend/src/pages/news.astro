                    <button class="action-btn hover:text-yellow flex items-center gap-2 text-white/60 transition-colors">
                      <svg
                        class="h-4 w-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m9.032 4.026a3 3 0 10-4.732-2.684m4.732 2.684a3 3 0 00-4.732-2.684M6.316 10.658a3 3 0 10-4.732 2.684"
                        />
                      </svg>
                      <span class="font-body text-xs uppercase">
                        Share article
                      </span>
                    </button>
                  </div>
                </div>
              </div>

              {/* Main Content */}
              <div class="article-content relative lg:col-span-6">
                <div class="content-wrapper p-8 lg:p-12">
                  {/* Main Headline */}
                  <h2 class="article-headline font-display mb-6 text-4xl leading-tight font-black text-white lg:text-5xl xl:text-6xl">
                    <span class="headline-highlight relative">
                      {featuredStory.title.split(":")[0]}:
                      <span class="highlight-bg" />
                    </span>
                    <span class="headline-secondary mt-2 block text-3xl text-white/80 lg:text-4xl">
                      {featuredStory.title.split(":")[1]}
                    </span>
                  </h2>

                  {/* Article Lead */}
                  <p class="article-lead font-body mb-8 text-lg leading-relaxed text-white/70 lg:text-xl">
                    {featuredStory.description}
                  </p>

                  {/* Article Author */}
                  <div class="article-meta mb-8 flex items-center gap-6">
                    <div class="meta-item flex items-center gap-2">
                      <div class="meta-icon bg-yellow/10 flex h-10 w-10 items-center justify-center">
                        <svg
                          class="text-yellow h-5 w-5"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                        </svg>
                      </div>
                      <div>
                        <span class="font-body block text-xs text-white/40 uppercase">
                          Written by
                        </span>
                        <span class="font-body block text-sm font-medium text-white">
                          Sports Desk
                        </span>
                      </div>
                    </div>
                  </div>

                  {/* CTA Buttons */}
                  <div class="article-actions flex items-center gap-4">
                    <a
                      href={featuredStory.href}
                      class="read-btn group bg-yellow font-body relative overflow-hidden px-8 py-4 font-black tracking-wider text-black uppercase transition-all hover:bg-yellow-400"
                    >
                      <span class="relative z-10 flex items-center gap-2">
                        Read Article
                        <svg
                          class="h-4 w-4 transition-transform group-hover:translate-x-1"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="3"
                            d="M14 5l7 7m0 0l-7 7m7-7H3"
                          />
                        </svg>
                      </span>
                    </a>

                    <button class="save-btn group hover:border-yellow hover:text-yellow flex items-center gap-2 border border-white/20 px-6 py-4 text-white/60 transition-all">
                      <svg
                        class="h-5 w-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"
                        />
                      </svg>
                      <span class="font-body text-sm font-bold tracking-wider uppercase">
                        Save
                      </span>
                    </button>
                  </div>
                </div>
              </div>

              {/* Feature Image */}
              <div class="article-image relative h-[400px] overflow-hidden lg:col-span-4 lg:h-auto">
                <div class="image-wrapper relative h-full">
                  <img
                    src={featuredStory.image}
                    alt={featuredStory.title}
                    class="article-img h-full w-full object-cover"
                    loading="eager"
                  />
                  <div class="image-overlay absolute inset-0 bg-gradient-to-l from-transparent to-black/50" />

                  {/* Image Caption */}
                  <div class="image-caption absolute right-0 bottom-0 left-0 bg-gradient-to-t from-black to-transparent p-6">
                    <p class="font-body text-xs tracking-wider text-white/60 uppercase">
                      Motherland SC / Official Photo
                    </p>
                  </div>
                </div>
              </div>
            </div>

            {/* Bottom Bar */}
            <div class="feature-bottom bg-black-900 border-t border-white/10 px-8 py-4">
              <div class="flex items-center justify-between">
                <div class="trending-topics flex items-center gap-4">
                  <span class="font-body text-xs font-bold tracking-wider text-white/40 uppercase">
                    Related:
                  </span>
                  <a
                    href="#"
                    class="font-body text-yellow text-xs tracking-wider uppercase transition-colors hover:text-yellow-400"
                  >
                    Transfers
                  </a>
                  <span class="text-white/20">•</span>
                  <a
                    href="#"
                    class="font-body hover:text-yellow text-xs tracking-wider text-white/60 uppercase transition-colors"
                  >
                    Squad News
                  </a>
                  <span class="text-white/20">•</span>
                  <a
                    href="#"
                    class="font-body hover:text-yellow text-xs tracking-wider text-white/60 uppercase transition-colors"
                  >
                    Manager Interview
                  </a>
                </div>

                <div class="social-share flex items-center gap-3">
                  <button class="social-btn hover:bg-yellow flex h-8 w-8 items-center justify-center bg-white/5 text-white/60 transition-all hover:text-black">
                    <svg
                      class="h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
