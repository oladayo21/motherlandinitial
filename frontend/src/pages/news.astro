  "Club News",
  "Match Reports",
  "Transfers",
  "Team News",
  "Academy",
  "Women's Team",
  "Interviews",
  "Features",
  "Community",
];

// Get category from URL params (for future JS implementation)
const selectedCategory = "All News";

// Filter news based on category
const filteredNews =
  selectedCategory === "All News"
    ? allNews
