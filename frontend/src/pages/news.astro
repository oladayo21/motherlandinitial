</style>

<script>
  // Scroll to news grid section
  function scrollToNewsGrid() {
    const newsGrid = document.getElementById("news-grid");
    if (newsGrid) {
      // Calculate the position accounting for the sticky navbar
      const navbarHeight = 72; // Height of navbar
      const elementPosition = newsGrid.getBoundingClientRect().top;
      const offsetPosition =
        elementPosition + window.pageYOffset - navbarHeight;

      window.scrollTo({
        top: offsetPosition,
        behavior: "smooth",
      });
    }
  }

  // Category filtering (client-side)
  document.addEventListener("DOMContentLoaded", () => {
    // Handle sticky category filter translucency
    const categoryFilter = document.querySelector(".category-filter");

    if (categoryFilter) {
      // Store the initial offset position
      const initialOffset = categoryFilter.offsetTop;

      // Check if filter is stuck and add translucent effect
      const handleScroll = () => {
        const scrollY = window.scrollY;
        const threshold = initialOffset - 72 - 10;

        // When scrolled past the initial position, the filter becomes sticky
        if (scrollY > threshold) {
          categoryFilter.classList.add("is-scrolled");
        } else {
          categoryFilter.classList.remove("is-scrolled");
        }
      };

      // Add scroll listener with passive option for better performance
      window.addEventListener("scroll", handleScroll, { passive: true });

      // Check initial state
      handleScroll();
    }
    const categoryButtons = document.querySelectorAll("[data-category]");

    categoryButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const category = button.dataset.category;
        // In a real implementation, this would filter the news items
        // or navigate to a URL with the category parameter
        console.log("Selected category:", category);

        // Update active state
        categoryButtons.forEach((btn) => {
          btn.classList.remove("bg-yellow", "text-black");
          btn.classList.add("bg-black-900", "text-white");
        });
        button.classList.remove("bg-black-900", "text-white");
        button.classList.add("bg-yellow", "text-black");

        // Scroll to top of news section
        scrollToNewsGrid();
      });
    });
  });

  // Pagination (would typically be handled server-side or with a framework)
  document.addEventListener("DOMContentLoaded", () => {
    const pageButtons = document.querySelectorAll("[data-page]");
    const prevButton = document.querySelector(".pagination-prev");
    const nextButton = document.querySelector(".pagination-next");

    // Handle page number clicks
    pageButtons?.forEach((button) => {
      button.addEventListener("click", () => {
        const page = button.dataset.page;
        // Navigate to page or update content
        console.log("Navigate to page:", page);
        scrollToNewsGrid();
      });
    });

    // Handle prev/next buttons
    prevButton?.addEventListener("click", () => {
      if (!prevButton.disabled) {
        scrollToNewsGrid();
      }
    });

    nextButton?.addEventListener("click", () => {
      if (!nextButton.disabled) {
        scrollToNewsGrid();
      }
    });
  });
</script>
