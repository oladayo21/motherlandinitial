---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Container from "../../components/ui/Container.astro";
import Button from "../../components/ui/Button.astro";
import TeamHero from "../../components/TeamHero.astro";

const teamStats = {
  founded: "2019",
  stadium: "Olympiastadion Berlin",
  capacity: "74,475",
  manager: "Roberto Mancini",
  captain: "Lucas Rodriguez",
  league: "Bundesliga",
  position: "3rd",
  matchesPlayed: "15",
  wins: "10",
  draws: "3",
  losses: "2",
  goalsFor: "38",
  goalsAgainst: "14",
};

const recentMatches = [
  {
    competition: "Bundesliga",
    date: "Dec 15",
    home: "Motherland SC",
    away: "Bayern Munich",
    homeScore: 2,
    awayScore: 1,
    result: "W",
  },
  {
    competition: "DFB-Pokal",
    date: "Dec 10",
    home: "Motherland SC",
    away: "Borussia Dortmund",
    homeScore: 3,
    awayScore: 2,
    result: "W",
  },
  {
    competition: "Bundesliga",
    date: "Dec 5",
    home: "RB Leipzig",
    away: "Motherland SC",
    homeScore: 1,
    awayScore: 1,
    result: "D",
  },
];

const trophies = [
  { name: "DFB-Pokal", year: "2023", icon: "üèÜ" },
  { name: "Berlin Cup", year: "2022", icon: "ü•á" },
  { name: "Community Shield", year: "2023", icon: "üõ°Ô∏è" },
];
---

<BaseLayout
  title="Men's Team - Motherland SC"
  description="Motherland SC Men's First Team - Squad, fixtures, results and latest news"
>
  <!-- Hero Section -->
  <TeamHero
    title="Men's Team"
    subtitle="Pride of Berlin. Champions in the making. Follow our journey as we compete at the highest level of German football."
    backgroundImage="https://images.unsplash.com/photo-1631495634750-0f14320bc0a7?q=80&w=2071"
    stats={[
      { value: teamStats.position, label: "League Position", highlight: true },
      { value: teamStats.wins, label: "Wins" },
      { value: teamStats.draws, label: "Draws" },
      { value: teamStats.losses, label: "Losses" },
      { value: teamStats.goalsFor, label: "Goals For", highlight: true },
    ]}
  />
  
  <!-- Quick Navigation -->
  <section class="bg-black border-b border-white/10">
    <Container>
      <div class="py-6">
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/teams/men/players-staff" class="group relative overflow-hidden bg-yellow px-8 py-4 font-display font-bold text-black uppercase tracking-wider transition-all hover:shadow-[0_0_40px_rgba(255,214,2,0.5)]">
            <span class="relative z-10">View Squad</span>
            <div class="absolute inset-0 bg-white transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
          </a>
          <a href="/teams/men/fixtures-results" class="group relative overflow-hidden border border-white/30 px-8 py-4 font-display font-bold text-white uppercase tracking-wider transition-all hover:border-yellow hover:text-yellow">
            <span class="relative z-10">Fixtures & Results</span>
            <div class="absolute inset-0 bg-yellow/10 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
          </a>
          <a href="/teams/men/stats" class="group relative overflow-hidden border border-white/30 px-8 py-4 font-display font-bold text-white uppercase tracking-wider transition-all hover:border-yellow hover:text-yellow">
            <span class="relative z-10">Team Stats</span>
            <div class="absolute inset-0 bg-yellow/10 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
          </a>
        </div>
      </div>
    </Container>
  </section>

  <!-- Quick Stats Bar -->
  <section class="bg-yellow relative overflow-hidden">
    <div class="absolute inset-0 bg-[linear-gradient(90deg,black_1px,transparent_1px),linear-gradient(180deg,black_1px,transparent_1px)] bg-[size:20px_20px] opacity-10"></div>
    <Container>
      <div class="relative py-8">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
          <div class="text-center">
            <div class="text-4xl font-black text-black">{teamStats.position}</div>
            <div class="text-sm font-medium text-black/70 uppercase mt-1">Position</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-black text-black">{teamStats.wins}</div>
            <div class="text-sm font-medium text-black/70 uppercase mt-1">Wins</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-black text-black">{teamStats.draws}</div>
            <div class="text-sm font-medium text-black/70 uppercase mt-1">Draws</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-black text-black">{teamStats.losses}</div>
            <div class="text-sm font-medium text-black/70 uppercase mt-1">Losses</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-black text-black">{teamStats.goalsFor}</div>
            <div class="text-sm font-medium text-black/70 uppercase mt-1">Goals For</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-black text-black">{teamStats.goalsAgainst}</div>
            <div class="text-sm font-medium text-black/70 uppercase mt-1">Goals Against</div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Recent Matches -->
  <section class="bg-black py-20">
    <Container>
      <div class="mb-12">
        <h2 class="font-display text-4xl md:text-5xl font-black text-white uppercase mb-4">Recent Results</h2>
        <div class="h-1 w-20 bg-yellow"></div>
      </div>
      
      <div class="grid gap-4">
        {recentMatches.map((match, index) => (
          <div 
            class="group relative bg-black-900 border border-white/10 p-6 transition-all hover:border-yellow/50 hover:shadow-[0_0_30px_rgba(255,214,2,0.1)] animate-slideInUp"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-8">
                <!-- Competition & Date -->
                <div class="hidden md:block">
                  <div class="text-yellow text-xs font-medium uppercase tracking-wider">{match.competition}</div>
                  <div class="text-white/50 text-sm mt-1">{match.date}</div>
                </div>
                
                <!-- Teams & Score -->
                <div class="flex items-center gap-6">
                  <div class="text-right">
                    <div class={`font-display text-lg font-bold ${match.home === "Motherland SC" ? "text-white" : "text-white/70"}`}>
                      {match.home}
                    </div>
                  </div>
                  <div class="flex items-center gap-3 bg-black-800 px-4 py-2">
                    <span class="text-2xl font-black text-white">{match.homeScore}</span>
                    <span class="text-white/30">-</span>
                    <span class="text-2xl font-black text-white">{match.awayScore}</span>
                  </div>
                  <div>
                    <div class={`font-display text-lg font-bold ${match.away === "Motherland SC" ? "text-white" : "text-white/70"}`}>
                      {match.away}
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Result Badge -->
              <div class={`px-4 py-2 font-bold text-sm uppercase ${
                match.result === "W" ? "bg-green-500/20 text-green-400 border border-green-500/30" :
                match.result === "D" ? "bg-yellow/20 text-yellow border border-yellow/30" :
                "bg-red-500/20 text-red-400 border border-red-500/30"
              }`}>
                {match.result === "W" ? "WIN" : match.result === "D" ? "DRAW" : "LOSS"}
              </div>
            </div>
            
            <!-- Hover Effect Line -->
            <div class="absolute left-0 top-0 h-full w-1 bg-yellow transform scale-y-0 group-hover:scale-y-100 transition-transform origin-top"></div>
          </div>
        ))}
      </div>
      
      <div class="mt-8 text-center">
        <a href="/teams/men/fixtures-results" class="inline-flex items-center gap-2 text-yellow font-medium hover:gap-4 transition-all">
          <span>View All Fixtures & Results</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </Container>
  </section>

  <!-- Trophy Cabinet -->
  <section class="bg-gradient-to-b from-black via-black-900 to-black py-20 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,yellow_1px,transparent_1px)] bg-[size:30px_30px]"></div>
    </div>
    
    <Container>
      <div class="relative">
        <div class="text-center mb-12">
          <h2 class="font-display text-4xl md:text-5xl font-black text-white uppercase mb-4">Trophy Cabinet</h2>
          <div class="h-1 w-20 bg-yellow mx-auto"></div>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          {trophies.map((trophy, index) => (
            <div 
              class="group relative bg-black border border-white/10 p-8 text-center transition-all hover:border-yellow/50 hover:shadow-[0_0_40px_rgba(255,214,2,0.2)] hover:scale-105 animate-fadeInUp"
              style={`animation-delay: ${index * 0.2}s`}
            >
              <!-- Trophy Icon -->
              <div class="text-6xl mb-4 transform group-hover:scale-110 transition-transform">
                {trophy.icon}
              </div>
              
              <!-- Trophy Name -->
              <h3 class="font-display text-xl font-bold text-white uppercase mb-2">
                {trophy.name}
              </h3>
              
              <!-- Year -->
              <div class="text-yellow text-2xl font-black">
                {trophy.year}
              </div>
              
              <!-- Decorative Corner -->
              <div class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-yellow opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <div class="absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 border-yellow opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </section>

  <!-- Team Info Grid -->
  <section class="bg-black py-20" id="stats">
    <Container>
      <div class="mb-12">
        <h2 class="font-display text-4xl md:text-5xl font-black text-white uppercase mb-4">Team Information</h2>
        <div class="h-1 w-20 bg-yellow"></div>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Stadium Card -->
        <div class="group relative bg-black-900 border border-white/10 overflow-hidden transition-all hover:border-yellow/50">
          <div class="aspect-video relative overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1522778119026-d647f0596c20?q=80&w=2070"
              alt="Stadium"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>
          </div>
          <div class="p-6">
            <h3 class="font-display text-xl font-bold text-white uppercase mb-4">Home Ground</h3>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-white/50">Stadium</span>
                <span class="text-white font-medium">{teamStats.stadium}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/50">Capacity</span>
                <span class="text-white font-medium">{teamStats.capacity}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/50">Founded</span>
                <span class="text-white font-medium">{teamStats.founded}</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Manager Card -->
        <div class="group relative bg-black-900 border border-white/10 overflow-hidden transition-all hover:border-yellow/50">
          <div class="aspect-video relative overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1560250097-0b93528c311a?q=80&w=1974"
              alt="Manager"
              class="w-full h-full object-cover object-top group-hover:scale-110 transition-transform duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>
          </div>
          <div class="p-6">
            <h3 class="font-display text-xl font-bold text-white uppercase mb-4">Management</h3>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-white/50">Head Coach</span>
                <span class="text-white font-medium">{teamStats.manager}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/50">Captain</span>
                <span class="text-white font-medium">{teamStats.captain}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/50">League</span>
                <span class="text-white font-medium">{teamStats.league}</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Season Stats Card -->
        <div class="group relative bg-black-900 border border-white/10 overflow-hidden transition-all hover:border-yellow/50">
          <div class="aspect-video relative overflow-hidden bg-gradient-to-br from-yellow/20 to-black flex items-center justify-center">
            <div class="text-center">
              <div class="text-6xl font-black text-yellow mb-2">{teamStats.position}</div>
              <div class="text-white/70 uppercase text-sm tracking-wider">Current Position</div>
            </div>
          </div>
          <div class="p-6">
            <h3 class="font-display text-xl font-bold text-white uppercase mb-4">Season Stats</h3>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-white/50">Played</span>
                <span class="text-white font-medium">{teamStats.matchesPlayed}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/50">Points</span>
                <span class="text-white font-medium">{parseInt(teamStats.wins) * 3 + parseInt(teamStats.draws)}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/50">Goal Diff</span>
                <span class="text-green-400 font-medium">+{parseInt(teamStats.goalsFor) - parseInt(teamStats.goalsAgainst)}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="bg-yellow relative overflow-hidden py-20">
    <div class="absolute inset-0 bg-[linear-gradient(45deg,black_25%,transparent_25%,transparent_75%,black_75%,black)] bg-[length:30px_30px] opacity-10"></div>
    <Container>
      <div class="relative text-center">
        <h2 class="font-display text-4xl md:text-5xl font-black text-black uppercase mb-4">Support The Team</h2>
        <p class="text-black/70 text-lg mb-8 max-w-2xl mx-auto">
          Be part of our journey. Get your season ticket and experience every moment of the action.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/tickets" class="bg-black text-white px-8 py-4 font-display font-bold uppercase tracking-wider hover:shadow-[0_0_40px_rgba(0,0,0,0.5)] transition-all">
            Get Season Tickets
          </a>
          <a href="/membership" class="bg-white text-black px-8 py-4 font-display font-bold uppercase tracking-wider hover:shadow-[0_0_40px_rgba(255,255,255,0.5)] transition-all">
            Become a Member
          </a>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>

<style>
  @keyframes meshMove {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 30px 30px;
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-meshMove {
    animation: meshMove 10s linear infinite;
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .animate-slideInLeft {
    animation: slideInLeft 0.8s ease-out forwards;
  }
  
  .animate-slideInUp {
    opacity: 0;
    animation: slideInUp 0.6s ease-out forwards;
  }
  
  .animate-fadeInUp {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>

<script>
  // Parallax effect for hero background
  const parallaxElement = document.getElementById('hero-parallax');
  if (parallaxElement) {
    window.addEventListener('scroll', () => {
      const scrolled = window.scrollY;
      const rate = scrolled * -0.5;
      if (parallaxElement.querySelector('img')) {
        (parallaxElement.querySelector('img') as HTMLElement).style.transform = `translateY(${rate}px)`;
      }
    });
  }
</script>