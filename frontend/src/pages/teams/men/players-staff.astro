  <!-- Coaching Staff Section -->
  <section class="bg-gradient-to-b from-black via-black-900 to-black py-20 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,yellow_1px,transparent_1px),linear-gradient(to_bottom,yellow_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>
    </div>
    
    <Container>
      <div class="relative">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <h2 class="font-display text-5xl md:text-7xl font-black text-white uppercase mb-4">
            Coaching Staff
          </h2>
          <div class="h-1 w-32 bg-yellow mx-auto"></div>
        </div>
        
        <!-- Staff Grid -->
        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {staff.map((member, index) => (
            <div 
              class="group relative bg-black border border-white/10 overflow-hidden hover:border-yellow/50 transition-all duration-500 hover:shadow-[0_20px_60px_rgba(255,214,2,0.2)] animate-fadeInUp"
              style={`animation-delay: ${index * 0.2}s`}
            >
              <!-- Staff Image -->
              <div class="relative h-80 overflow-hidden">
                <img
                  src={member.image}
                  alt={member.name}
                  class="absolute inset-0 h-full w-full object-cover object-top transition-transform duration-700 group-hover:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>
              </div>
              
              <!-- Staff Info -->
              <div class="relative p-6 bg-black">
                <h3 class="font-display text-xl font-bold text-white uppercase mb-2">
                  {member.name}
                </h3>
                <p class="text-yellow text-sm font-medium uppercase mb-4">
                  {member.role}
                </p>
                <div class="flex justify-between text-sm">
                  <span class="text-white/50">{member.nationality}</span>
                  <span class="text-white/50">Since {member.joinedYear}</span>
                </div>
              </div>
              
              <!-- Hover Effect -->
              <div class="absolute left-0 bottom-0 h-1 w-full bg-yellow transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </section>

  <!-- Call to Action -->
  <section class="bg-yellow relative overflow-hidden py-20">
    <div class="absolute inset-0 bg-[linear-gradient(45deg,black_25%,transparent_25%,transparent_75%,black_75%,black)] bg-[length:30px_30px] opacity-10"></div>
    <Container>
      <div class="relative text-center">
        <h2 class="font-display text-4xl md:text-5xl font-black text-black uppercase mb-4">
          Meet The Players
        </h2>
