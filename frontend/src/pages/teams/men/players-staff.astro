                          player.nationality === "France" ? "fr" :
                          player.nationality === "Nigeria" ? "ng" :
                          player.nationality === "Spain" ? "es" :
                          player.nationality === "Ghana" ? "gh" :
                          player.nationality === "Japan" ? "jp" :
                          player.nationality === "Mali" ? "ml" :
                          player.nationality === "Italy" ? "it" :
                          player.nationality === "Russia" ? "ru" :
                          player.nationality === "Portugal" ? "pt" :
                          player.nationality === "Cameroon" ? "cm" :
                          player.nationality === "South Korea" ? "kr" :
                          player.nationality === "Ireland" ? "ie" :
                          "un"
                        }.png`}
