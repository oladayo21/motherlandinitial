                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
              </svg>
              <span class="font-medium">List View</span>
            </button>
            <button class="flex items-center gap-2 text-black/50 hover:text-black/70 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
              </svg>
              <span class="font-medium">Grid View</span>
            </button>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Players Grid with Enhanced Design -->
  <section class="bg-black min-h-screen py-20">
    <Container>
      {Object.entries(players).map(([position, playerList]) => (
        <div class="mb-20">
          <!-- Position Header -->
          <div class="mb-10 relative">
            <h2 class="font-display text-6xl md:text-8xl font-black text-white/5 uppercase">
              {positions[position as keyof typeof positions]}
            </h2>
            <div class="absolute top-1/2 -translate-y-1/2 left-0">
              <h3 class="font-display text-2xl md:text-3xl font-bold text-yellow uppercase">
                {positions[position as keyof typeof positions]}
              </h3>
              <div class="h-1 w-20 bg-yellow mt-2"></div>
            </div>
          </div>
          
          <!-- Players Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {playerList.map((player, index) => (
              <a
                href={`/teams/men/player/${player.id}`}
                class="group relative bg-black-900 border border-white/10 overflow-hidden hover:border-yellow/50 transition-all duration-500 hover:scale-105 hover:shadow-[0_20px_60px_rgba(255,214,2,0.3)] animate-fadeInUp"
                style={`animation-delay: ${index * 0.1}s`}
              >
                <!-- Player Image -->
                <div class="relative h-96 overflow-hidden bg-gradient-to-b from-black-800 to-black">
                  <img
                    src={player.image}
                    alt={`${player.firstName} ${player.lastName}`}
                    class="absolute inset-0 h-full w-full object-cover object-top transition-transform duration-700 group-hover:scale-110"
                    loading="lazy"
                  />
                  
                  <!-- Gradient Overlay -->
                  <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent opacity-60"></div>
                  
                  <!-- Jersey Number -->
                  <div class="absolute top-4 right-4 text-8xl font-black text-white/10 group-hover:text-yellow/20 transition-colors duration-500">
                    {player.number}
                  </div>
                  
                  <!-- Special Badges -->
                  {player.isCaptain && (
                    <div class="absolute top-4 left-4 bg-yellow text-black px-3 py-1 text-xs font-bold uppercase">
                      Captain
                    </div>
                  )}
                  {player.isViceCaptain && (
                    <div class="absolute top-4 left-4 bg-white text-black px-3 py-1 text-xs font-bold uppercase">
                      Vice Captain
                    </div>
                  )}
                  {player.isTopScorer && (
                    <div class="absolute top-4 left-4 bg-gradient-to-r from-yellow to-gold text-black px-3 py-1 text-xs font-bold uppercase">
                      Top Scorer
                    </div>
                  )}
                </div>
                
                <!-- Player Info -->
                <div class="relative p-6 bg-gradient-to-t from-black to-black-900">
                  <!-- Name and Number -->
                  <div class="mb-4">
                    <div class="flex items-center justify-between mb-2">
                      <span class="text-yellow text-2xl font-black">{player.number}</span>
                      <span class="text-white/50 text-xs uppercase">{player.position}</span>
                    </div>
                    <h4 class="font-body text-white/80 text-sm">{player.firstName}</h4>
                    <h3 class="font-display text-2xl font-black text-white uppercase tracking-tight">
                      {player.lastName}
                    </h3>
                  </div>
                  
                  <!-- Player Stats -->
                  <div class="grid grid-cols-3 gap-4 pt-4 border-t border-white/10">
                    <div class="text-center">
                      <div class="text-white text-sm font-bold">
                        {player.caps || player.goals || "-"}
                      </div>
                      <div class="text-white/50 text-xs uppercase mt-1">
                        {player.caps ? "Caps" : player.goals ? "Goals" : "Saves"}
                      </div>
                    </div>
                    <div class="text-center">
                      <div class="text-white text-sm font-bold">
                        {player.goals || player.assists || player.cleanSheets || "-"}
                      </div>
                      <div class="text-white/50 text-xs uppercase mt-1">
                        {player.goals ? "Goals" : player.assists ? "Assists" : "Clean"}
                      </div>
                    </div>
                    <div class="text-center">
                      <div class="text-white text-sm font-bold">
                        {player.assists || player.cleanSheets || player.age || "-"}
                      </div>
                      <div class="text-white/50 text-xs uppercase mt-1">
                        {player.assists ? "Assists" : player.cleanSheets ? "Sheets" : "Age"}
                      </div>
                    </div>
                  </div>
                  
                  <!-- Nationality Flag -->
                  <div class="absolute bottom-6 right-6 text-white/30 text-xs uppercase">
                    {player.nationality}
                  </div>
                </div>
                
                <!-- Hover Overlay -->
                <div class="absolute inset-0 bg-yellow/0 group-hover:bg-yellow/10 transition-colors duration-500 pointer-events-none"></div>
                
                <!-- View Profile CTA -->
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
                  <div class="bg-yellow text-black px-6 py-3 font-bold uppercase tracking-wider transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                    View Profile
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
    </Container>
