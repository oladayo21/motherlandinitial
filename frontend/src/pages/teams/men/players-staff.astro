    backgroundImage="https://images.unsplash.com/photo-1508098682722-e99c43a406b2?q=80&w=2070"
    stats={[
      { value: squadStats.totalPlayers, label: "Players", highlight: true },
      { value: squadStats.averageAge, label: "Avg Age" },
      { value: squadStats.nationalities, label: "Nations" },
      { value: squadStats.totalCaps, label: "Total Caps" },
      { value: squadStats.totalGoals, label: "Total Goals", highlight: true },
    ]}
  />

  <!-- Position Filter Bar -->
