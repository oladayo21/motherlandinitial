---

<BaseLayout
  title="Team Stats - Men's Team - Motherland SC"
  description="Motherland SC Men's Team statistics, league standings, and performance analysis"
>
  <!-- Hero Section -->
  <TeamHero
    title="Team Statistics"
    subtitle="Performance analytics and standings for the 2024/25 season"
    badge="Live Stats"
    backgroundImage="https://images.unsplash.com/photo-1574629810360-7efbbe195018?q=80&w=2070"
    stats={[
      { value: "3rd", label: "League Position", highlight: true },
      { value: "33", label: "Points" },
      { value: "+24", label: "Goal Difference", highlight: true },
      { value: "38", label: "Goals For" },
      { value: "14", label: "Goals Against" },
    ]}
  />

  <!-- Form Guide Bar -->
  <section class="bg-yellow">
    <Container>
      <div class="py-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <span class="text-sm font-bold text-black uppercase"
              >Last 5 Matches</span
            >
            <div class="flex gap-2">
              {
                formGuide.map((result) => (
                  <div
                    class={`flex h-8 w-8 items-center justify-center text-xs font-bold ${
                      result === "W"
                        ? "bg-green-500 text-white"
                        : result === "D"
                          ? "bg-gray-500 text-white"
                          : "bg-red-500 text-white"
                    }`}
                  >
                    {result}
                  </div>
                ))
              }
            </div>
          </div>
          <div class="hidden md:block">
            <span class="font-medium text-black">Current Form: </span>
            <span class="font-black text-black">Excellent</span>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Main Stats Content -->
  <section class="bg-black py-20">
    <Container>
      <div class="grid gap-12 lg:grid-cols-3">
        <!-- Left Column - League Table -->
        <div class="space-y-8 lg:col-span-2">
          <!-- League Standings -->
          <div class="bg-black-900 border border-white/10 p-8">
            <h2
              class="font-display mb-6 text-2xl font-bold text-white uppercase"
            >
              Bundesliga Standings
            </h2>
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="border-b border-white/20">
                    <th
                      class="py-3 text-left text-xs font-medium text-white/50 uppercase"
                      >Pos</th
                    >
                    <th
                      class="py-3 text-left text-xs font-medium text-white/50 uppercase"
                      >Team</th
                    >
                    <th
                      class="py-3 text-center text-xs font-medium text-white/50 uppercase"
                      >P</th
                    >
                    <th
                      class="py-3 text-center text-xs font-medium text-white/50 uppercase"
                      >W</th
                    >
                    <th
                      class="py-3 text-center text-xs font-medium text-white/50 uppercase"
                      >D</th
                    >
                    <th
                      class="py-3 text-center text-xs font-medium text-white/50 uppercase"
                      >L</th
                    >
                    <th
                      class="py-3 text-center text-xs font-medium text-white/50 uppercase"
                      >GF</th
                    >
                    <th
                      class="py-3 text-center text-xs font-medium text-white/50 uppercase"
                      >GA</th
                    >
                    <th
                      class="py-3 text-center text-xs font-medium text-white/50 uppercase"
                      >GD</th
                    >
                    <th
                      class="py-3 text-center text-xs font-medium text-white/50 uppercase"
                      >Pts</th
                    >
                  </tr>
                </thead>
                <tbody>
                  {
                    leagueTable.map((team) => (
                      <tr
                        class={`border-b border-white/5 transition-colors ${
                          team.highlight
                            ? "bg-yellow/10 hover:bg-yellow/20"
                            : "hover:bg-white/5"
                        }`}
                      >
                        <td class="py-4">
                          <span
                            class={`font-bold ${team.highlight ? "text-yellow" : "text-white"}`}
                          >
                            {team.position}
                          </span>
                        </td>
                        <td class="py-4">
                          <span
                            class={`font-medium ${team.highlight ? "text-yellow" : "text-white"}`}
                          >
                            {team.team}
                          </span>
                        </td>
                        <td class="py-4 text-center text-white/70">
                          {team.played}
                        </td>
                        <td class="py-4 text-center text-green-400">
                          {team.won}
                        </td>
                        <td class="py-4 text-center text-gray-400">
                          {team.drawn}
                        </td>
                        <td class="py-4 text-center text-red-400">
                          {team.lost}
                        </td>
                        <td class="py-4 text-center text-white">{team.gf}</td>
                        <td class="py-4 text-center text-white">{team.ga}</td>
                        <td class="py-4 text-center">
                          <span
                            class={
                              team.gd > 0 ? "text-green-400" : "text-red-400"
                            }
                          >
                            {team.gd > 0 ? "+" : ""}
                            {team.gd}
                          </span>
                        </td>
                        <td class="py-4 text-center">
                          <span
                            class={`font-bold ${team.highlight ? "text-yellow" : "text-white"}`}
                          >
                            {team.points}
                          </span>
                        </td>
                      </tr>
                    ))
                  }
                </tbody>
              </table>
            </div>
          </div>

          <!-- Top Scorers -->
          <div class="bg-black-900 border border-white/10 p-8">
            <h2
              class="font-display mb-6 text-2xl font-bold text-white uppercase"
            >
              Top Scorers
            </h2>
            <div class="space-y-4">
              {
                topScorers.map((player, index) => (
                  <div
                    class={`flex items-center justify-between p-4 ${
                      index === 0
                        ? "from-yellow/20 border-yellow border-l-4 bg-gradient-to-r to-transparent"
                        : "bg-black-800"
                    }`}
                  >
                    <div class="flex items-center gap-4">
                      <div
                        class={`text-2xl font-black ${index === 0 ? "text-yellow" : "text-white/50"}`}
                      >
                        {player.rank}
                      </div>
                      <div>
                        <div class="font-bold text-white">{player.name}</div>
                        <div class="text-sm text-white/50">
                          {player.matches} matches
                        </div>
                      </div>
                    </div>
                    <div class="flex items-center gap-6">
                      <div class="text-center">
                        <div class="text-yellow text-2xl font-black">
                          {player.goals}
                        </div>
                        <div class="text-xs text-white/50 uppercase">Goals</div>
                      </div>
                      <div class="text-center">
                        <div class="text-xl font-bold text-white">
                          {player.assists}
                        </div>
                        <div class="text-xs text-white/50 uppercase">
                          Assists
                        </div>
                      </div>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- Team Performance Stats -->
          <div class="bg-black-900 border border-white/10 p-8">
            <h2
              class="font-display mb-6 text-2xl font-bold text-white uppercase"
            >
              Performance Metrics
            </h2>
            <div class="space-y-6">
              {
                teamComparison.map((stat) => (
                  <div>
                    <div class="mb-2 flex justify-between">
                      <span class="font-medium text-white">{stat.stat}</span>
                      <div class="flex items-center gap-4">
                        <span class="text-yellow font-bold">{stat.value}</span>
                        <span class="text-sm text-white/50">
                          League Avg: {stat.leagueAvg}
                        </span>
                        <span
                          class={`px-2 py-1 text-xs font-bold ${
                            stat.rank === 1
                              ? "bg-yellow/20 text-yellow"
                              : "bg-white/10 text-white"
                          }`}
                        >
                          #{stat.rank}
                        </span>
                      </div>
                    </div>
                    <div class="bg-black-800 relative h-2">
                      <div
                        class="bg-yellow absolute h-full"
                        style={`width: ${Math.min((stat.value / (stat.leagueAvg * 1.5)) * 100, 100)}%`}
                      />
                      <div
                        class="absolute h-full w-0.5 bg-white/50"
                        style={`left: ${(stat.leagueAvg / (stat.leagueAvg * 1.5)) * 100}%`}
                      />
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Right Column - Competition Progress -->
        <div class="space-y-6">
          <!-- Competition Status -->
          <div
            class="from-yellow/20 to-yellow/5 border-yellow/30 border bg-gradient-to-br p-6"
          >
            <h3
              class="font-display mb-6 text-xl font-bold text-white uppercase"
            >
              Competition Progress
            </h3>
            <div class="space-y-4">
              {
                competitions.map((comp) => (
                  <div class="bg-black/40 p-4 backdrop-blur-sm">
                    <div class="flex items-start gap-3">
                      <span class="text-2xl">{comp.icon}</span>
                      <div class="flex-1">
                        <h4 class="font-bold text-white">{comp.name}</h4>
                        <p class="text-yellow mt-1 text-sm font-medium">
                          {comp.position}
                        </p>
                        <p class="mt-2 text-xs text-white/50">{comp.stage}</p>
                        <p class="mt-2 text-sm text-white/70">
                          Next: {comp.nextMatch}
                        </p>
                      </div>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- Season Overview Card -->
          <div class="bg-black-900 border border-white/10 p-6">
            <h3
              class="font-display mb-4 text-xl font-bold text-white uppercase"
            >
              Season Overview
            </h3>
            <div class="space-y-4">
              <div class="flex justify-between border-b border-white/10 py-3">
                <span class="text-white/50">Home Record</span>
                <span class="font-bold text-white">W7 D1 L0</span>
              </div>
              <div class="flex justify-between border-b border-white/10 py-3">
                <span class="text-white/50">Away Record</span>
                <span class="font-bold text-white">W3 D2 L2</span>
              </div>
              <div class="flex justify-between border-b border-white/10 py-3">
                <span class="text-white/50">Biggest Win</span>
                <span class="font-bold text-white">5-0 vs Frankfurt</span>
              </div>
              <div class="flex justify-between border-b border-white/10 py-3">
                <span class="text-white/50">Top Scorer</span>
                <span class="font-bold text-white">E. Nkrumah (12)</span>
              </div>
              <div class="flex justify-between py-3">
                <span class="text-white/50">Top Assists</span>
                <span class="font-bold text-white">L. Rodriguez (8)</span>
              </div>
            </div>
          </div>

          <!-- Records This Season -->
          <div class="bg-black-900 border border-white/10 p-6">
            <h3
              class="font-display mb-4 text-xl font-bold text-white uppercase"
            >
              Club Records 24/25
            </h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <span class="text-yellow text-xl">üéØ</span>
                <span class="text-sm text-white/80"
                  >Most goals in first 15 games</span
                >
              </div>
              <div class="flex items-center gap-3">
                <span class="text-yellow text-xl">ü•Ö</span>
                <span class="text-sm text-white/80">Best defensive record</span>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-yellow text-xl">‚ö°</span>
                <span class="text-sm text-white/80"
                  >Longest unbeaten run (9 games)</span
                >
              </div>
              <div class="flex items-center gap-3">
                <span class="text-yellow text-xl">üèüÔ∏è</span>
                <span class="text-sm text-white/80">100% home win record</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Call to Action -->
  <section class="from-yellow via-yellow/90 to-gold bg-gradient-to-r py-16">
    <Container>
      <div class="text-center">
        <h2
          class="font-display mb-4 text-3xl font-black text-black uppercase md:text-4xl"
        >
          Follow Every Match
        </h2>
        <p class="mb-8 text-lg text-black/70">
          Get live updates, detailed statistics, and match analysis
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/teams/men/fixtures-results"
            class="font-display bg-black px-8 py-4 font-bold tracking-wider text-white uppercase transition-all hover:shadow-[0_0_40px_rgba(0,0,0,0.5)]"
          >
            View Fixtures
          </a>
          <a
            href="/teams/mens"
            class="font-display bg-white px-8 py-4 font-bold tracking-wider text-black uppercase transition-all hover:shadow-[0_0_40px_rgba(255,255,255,0.5)]"
          >
            Team Overview
          </a>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>

<style>
  @keyframes drawLine {
    from {
      stroke-dasharray: 1000;
      stroke-dashoffset: 1000;
    }
    to {
      stroke-dashoffset: 0;
    }
  }

  .animate-drawLine {
    animation: drawLine 3s ease-out infinite;
  }
</style>
