---

<BaseLayout
  title="Teams - Motherland SC"
  description="Meet the Motherland SC squad - players and coaching staff"
>
  <!-- Hero Section with Team Photo -->
  <section class="relative h-[60vh] min-h-[500px] overflow-hidden bg-black">
    <!-- Team Photo Background -->
    <div class="absolute inset-0">
      <img
        src="/team-men.png"
        alt="Motherland SC Men's Team Photo"
        class="h-full w-full object-cover object-center opacity-90"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
      >
      </div>
    </div>

    <!-- Hero Content -->
    <Container>
      <div
        class="relative flex h-[60vh] min-h-[500px] flex-col justify-end pb-16"
      >
        <div class="animate-fadeInUp">
          <h1
            class="font-display mb-4 text-5xl font-black text-white uppercase md:text-7xl"
          >
            Men's First Team
          </h1>
          <p class="text-xl text-white/90 md:text-2xl">2024/25 Season</p>
          <div class="mt-6 flex items-center gap-8">
            <div class="border-yellow border-l-4 pl-4">
              <div class="text-yellow text-3xl font-black">25</div>
              <div class="text-sm text-white/70 uppercase">Players</div>
            </div>
            <div class="border-yellow border-l-4 pl-4">
              <div class="text-yellow text-3xl font-black">4</div>
              <div class="text-sm text-white/70 uppercase">Trophies</div>
            </div>
            <div class="border-yellow border-l-4 pl-4">
              <div class="text-yellow text-3xl font-black">15</div>
              <div class="text-sm text-white/70 uppercase">Nations</div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <Section background="white">
    <Container>
      <h2 class="font-display mb-8 text-3xl font-bold text-black uppercase">
        Players
        <div class="bg-yellow mt-3 h-0.5 w-20"></div>
      </h2>

      <div
        class="grid grid-cols-2 gap-x-6 gap-y-16 md:grid-cols-3 lg:grid-cols-4"
      >
        {
          players.map((player, index) => (
            <PlayerCard
              {...player}
              animate={true}
              style={`animation-delay: ${index * 0.05}s`}
            />
          ))
        }
      </div>
    </Container>
  </Section>

  <Section background="gradient-gold">
    <Container>
      <h2 class="font-display mb-8 text-3xl font-bold text-black uppercase">
        Coaching Staff
        <div class="mt-3 h-0.5 w-20 bg-black"></div>
      </h2>

      <div class="grid grid-cols-2 gap-6 md:grid-cols-3 lg:grid-cols-4">
        {
          coaching.map((staff, index) => (
            <div
              class={`group bg-black-800 border-black-700 hover:border-yellow hover:shadow-yellow/10 animate-fadeInUp relative overflow-hidden border opacity-0 transition-all duration-300 hover:scale-105 hover:shadow-xl`}
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="bg-black-900 aspect-[3/4] overflow-hidden">
                <img
                  src={staff.image}
                  alt={staff.name}
                  class="h-full w-full object-cover object-top transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
              </div>

              <div class="absolute right-0 bottom-0 left-0 bg-gradient-to-t from-black via-black/95 to-transparent p-4 pt-12">
                <h3 class="font-display group-hover:text-yellow mb-1 text-lg font-bold text-white transition-colors">
                  {staff.name}
                </h3>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-yellow text-xs font-medium tracking-wider uppercase">
                    {staff.position}
                  </span>
                  <div class="flex items-center gap-1">
                    <img
                      src={`https://flagcdn.com/24x18/${staff.nationality.toLowerCase()}.png`}
                      alt={staff.nationality}
                      class="h-4 w-5 object-cover"
                      onerror="this.style.display='none'"
                    />
                  </div>
                </div>
              </div>

              <div class="bg-yellow/0 group-hover:bg-yellow/5 pointer-events-none absolute inset-0 transition-colors" />
            </div>
          ))
        }
      </div>
    </Container>
  </Section>
</BaseLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeInUp {
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>
